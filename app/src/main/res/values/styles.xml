<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MiniAppTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="text_tip">
        <item name="android:textSize">@dimen/core_library_default_text_size</item>
        <item name="android:textColor">@color/core_library_default_text_color</item>
        <item name="android:paddingLeft">@dimen/core_library_default_space</item>
        <item name="android:paddingTop">@dimen/core_library_default_padding</item>
        <item name="android:paddingBottom">@dimen/core_library_default_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="input">
        <item name="android:background">@color/core_library_default_bg</item>
        <item name="android:layout_marginTop">@dimen/core_library_default_margin_top</item>
        <item name="android:padding">@dimen/core_library_default_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/core_library_default_margin_left_right</item>
        <item name="android:layout_marginRight">@dimen/core_library_default_margin_left_right</item>
    </style>

    <style name="line_horizational">
        <item name="android:layout_marginTop">@dimen/core_library_default_margin_top</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/core_library_default_line_color</item>
        <item name="android:layout_marginLeft">@dimen/core_library_default_margin_left_right</item>
        <item name="android:layout_marginRight">@dimen/core_library_default_margin_left_right</item>
    </style>

</resources>
